@page "/login"
@using AuthClient.BlazorWasm.Services
@using AuthClient.Shared.DTOs
@inject IAuthenticationService AuthService
@inject NavigationManager Navigation

<PageTitle>Login</PageTitle>

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h2>Welcome Back</h2>
            <p>Sign in to your account</p>
        </div>
        
        <EditForm Model="@loginModel" OnValidSubmit="@HandleLogin" class="auth-form">
            <DataAnnotationsValidator />
            
            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger" role="alert">
                    <strong>Error:</strong> @errorMessage
                </div>
            }

            <div class="form-floating mb-3">
                <InputText @bind-Value="loginModel.Email" 
                          class="form-control" 
                          id="email" 
                          placeholder="name@example.com"
                          autocomplete="email" />
                <label for="email">Email address</label>
                <ValidationMessage For="@(() => loginModel.Email)" class="text-danger" />
            </div>

            <div class="form-floating mb-3">
                <InputText @bind-Value="loginModel.Password" 
                          type="password" 
                          class="form-control" 
                          id="password" 
                          placeholder="Password"
                          autocomplete="current-password" />
                <label for="password">Password</label>
                <ValidationMessage For="@(() => loginModel.Password)" class="text-danger" />
            </div>

            <div class="d-grid gap-2 mb-3">
                <button type="submit" class="btn btn-primary btn-lg" disabled="@isLoading">
                    @if (isLoading)
                    {
                        <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                        <span>Signing in...</span>
                    }
                    else
                    {
                        <span>Sign In</span>
                    }
                </button>
            </div>

            <div class="auth-footer">
                <p>Don't have an account? <a href="/register" class="link-primary">Create one</a></p>
            </div>
        </EditForm>
    </div>
</div>

<style>
    .auth-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 2rem 1rem;
    }

    .auth-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        width: 100%;
        max-width: 420px;
        padding: 3rem 2.5rem;
    }

    .auth-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .auth-header h2 {
        font-size: 2rem;
        font-weight: 700;
        color: #1b6ec2;
        margin-bottom: 0.5rem;
    }

    .auth-header p {
        color: #6c757d;
        margin: 0;
    }

    .auth-form {
        margin-top: 2rem;
    }

    .form-floating {
        position: relative;
    }

    .form-floating > .form-control {
        height: calc(3.5rem + 2px);
        padding: 1rem 0.75rem;
        border-radius: 8px;
        border: 2px solid #e9ecef;
        transition: all 0.2s;
    }

    .form-floating > .form-control:focus {
        border-color: #1b6ec2;
        box-shadow: 0 0 0 0.2rem rgba(27, 110, 194, 0.15);
    }

    .form-floating > label {
        padding: 1rem 0.75rem;
    }

    .btn-primary {
        background: linear-gradient(135deg, #1b6ec2 0%, #0d5aa7 100%);
        border: none;
        border-radius: 8px;
        padding: 1rem;
        font-weight: 600;
        transition: all 0.2s;
    }

    .btn-primary:hover:not(:disabled) {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(27, 110, 194, 0.4);
    }

    .btn-primary:disabled {
        opacity: 0.7;
        cursor: not-allowed;
    }

    .auth-footer {
        text-align: center;
        margin-top: 1.5rem;
        padding-top: 1.5rem;
        border-top: 1px solid #e9ecef;
    }

    .auth-footer p {
        margin: 0;
        color: #6c757d;
    }

    .link-primary {
        color: #1b6ec2;
        text-decoration: none;
        font-weight: 600;
    }

    .link-primary:hover {
        text-decoration: underline;
    }

    .alert {
        border-radius: 8px;
        margin-bottom: 1.5rem;
    }

    @@media (max-width: 576px) {
        .auth-card {
            padding: 2rem 1.5rem;
        }

        .auth-header h2 {
            font-size: 1.5rem;
        }
    }
</style>

@code {
    private LoginModel loginModel = new();
    private bool isLoading = false;
    private string? errorMessage;

    private async Task HandleLogin()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            var request = new LoginRequest(loginModel.Email, loginModel.Password, "web-client");
            var result = await AuthService.LoginAsync(request);

            if (result.Success)
            {
                // Force a full page reload to ensure auth state is properly initialized
                Navigation.NavigateTo("/", true);
            }
            else
            {
                errorMessage = result.Message ?? "Login failed. Please check your credentials.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"An error occurred: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private class LoginModel
    {
        public string Email { get; set; } = "";
        public string Password { get; set; } = "";
    }
}
