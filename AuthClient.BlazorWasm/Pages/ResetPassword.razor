@page "/reset-password"
@using System.ComponentModel.DataAnnotations
@using Microsoft.AspNetCore.WebUtilities
@using AuthClient.BlazorWasm.Services
@inject IAuthenticationService AuthService
@inject INotificationService NotificationService
@inject NavigationManager Navigation

<PageTitle>Reset Password</PageTitle>

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h2>Reset Password</h2>
            <p>Create a new password for your account</p>
        </div>

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger" role="alert">
                <span class="oi oi-warning me-2"></span>@errorMessage
            </div>
        }

        @if (!isValidToken)
        {
            <div class="alert alert-danger" role="alert">
                <h5 class="alert-heading">Invalid or Expired Link</h5>
                <p>The password reset link is invalid or has expired. Please request a new password reset link.</p>
                <hr>
                <button type="button" class="btn btn-primary" @onclick="NavigateToForgotPassword">
                    Request New Link
                </button>
            </div>
        }
        else if (!passwordReset)
        {
            <EditForm Model="@model" OnValidSubmit="@HandleSubmit" class="auth-form">
                <DataAnnotationsValidator />

                <div class="form-group mb-3">
                    <label for="password" class="form-label">
                        New Password <span class="text-danger">*</span>
                    </label>
                    <div class="password-input-group">
                        <InputText 
                            type="@(showPassword ? "text" : "password")"
                            class="form-control" 
                            id="password"
                            @bind-Value="model.Password"
                            @bind-Value:event="oninput"
                            @onkeyup="OnPasswordInput"
                            placeholder="Enter new password" />
                        <button type="button" 
                                class="btn btn-outline-secondary password-toggle"
                                @onclick="() => showPassword = !showPassword">
                            <span class="oi @(showPassword ? "oi-eye" : "oi-lock-locked")"></span>
                        </button>
                    </div>
                    <ValidationMessage For="@(() => model.Password)" />
                    
                    @if (!string.IsNullOrEmpty(model.Password))
                    {
                        <PasswordStrengthIndicator Password="@model.Password" />
                    }
                </div>

                <div class="form-group mb-3">
                    <label for="confirmPassword" class="form-label">
                        Confirm New Password <span class="text-danger">*</span>
                    </label>
                    <div class="password-input-group">
                        <InputText 
                            type="@(showConfirmPassword ? "text" : "password")"
                            class="form-control" 
                            id="confirmPassword"
                            @bind-Value="model.ConfirmPassword"
                            placeholder="Confirm new password" />
                        <button type="button" 
                                class="btn btn-outline-secondary password-toggle"
                                @onclick="() => showConfirmPassword = !showConfirmPassword">
                            <span class="oi @(showConfirmPassword ? "oi-eye" : "oi-lock-locked")"></span>
                        </button>
                    </div>
                    <ValidationMessage For="@(() => model.ConfirmPassword)" />
                </div>

                <div class="alert alert-info" role="alert">
                    <strong>Password Requirements:</strong>
                    <ul class="mb-0 mt-2">
                        <li>At least 8 characters long</li>
                        <li>Contains at least one uppercase letter</li>
                        <li>Contains at least one lowercase letter</li>
                        <li>Contains at least one number</li>
                        <li>Contains at least one special character</li>
                    </ul>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary" disabled="@isSubmitting">
                        @if (isSubmitting)
                        {
                            <LoadingSpinner Size="sm" />
                            <span class="ms-2">Resetting Password...</span>
                        }
                        else
                        {
                            <span>Reset Password</span>
                        }
                    </button>
                    <button type="button" class="btn btn-link" @onclick="NavigateToLogin" disabled="@isSubmitting">
                        Back to Login
                    </button>
                </div>
            </EditForm>
        }
        else
        {
            <div class="success-message text-center">
                <div class="success-icon mb-3">
                    <span class="oi oi-check" style="font-size: 4rem; color: #28a745;"></span>
                </div>
                <h3 class="mb-3">Password Reset Successful!</h3>
                <p class="text-muted mb-4">
                    Your password has been reset successfully. You can now log in with your new password.
                </p>
                <div class="d-grid">
                    <button type="button" class="btn btn-primary" @onclick="NavigateToLogin">
                        Go to Login
                    </button>
                </div>
            </div>
        }
    </div>
</div>

@code {
    private ResetPasswordModel model = new();
    private string? errorMessage;
    private bool isSubmitting;
    private bool passwordReset;
    private bool isValidToken = true;
    private bool showPassword;
    private bool showConfirmPassword;
    private string? resetToken;
    private string? email;

    protected override void OnInitialized()
    {
        var uri = Navigation.ToAbsoluteUri(Navigation.Uri);
        
        if (QueryHelpers.ParseQuery(uri.Query).TryGetValue("token", out var token))
        {
            resetToken = token;
        }
        
        if (QueryHelpers.ParseQuery(uri.Query).TryGetValue("email", out var emailValue))
        {
            email = emailValue;
            model.Email = email;
        }

        if (string.IsNullOrEmpty(resetToken) || string.IsNullOrEmpty(email))
        {
            isValidToken = false;
        }
    }

    private async Task HandleSubmit()
    {
        errorMessage = null;
        isSubmitting = true;

        try
        {
            var request = new ResetPasswordRequest
            {
                Email = model.Email!,
                Token = resetToken!,
                NewPassword = model.Password!
            };

            var response = await AuthService.ResetPasswordAsync(request);

            if (response.Success)
            {
                passwordReset = true;
                await NotificationService.ShowSuccessAsync("Password reset successfully!");
            }
            else
            {
                errorMessage = response.Message ?? "Failed to reset password. The link may have expired.";
                if (errorMessage.Contains("expired", StringComparison.OrdinalIgnoreCase) ||
                    errorMessage.Contains("invalid", StringComparison.OrdinalIgnoreCase))
                {
                    isValidToken = false;
                }
            }
        }
        catch (Exception ex)
        {
            errorMessage = "An error occurred while resetting your password. Please try again.";
            await NotificationService.ShowErrorAsync(ex.Message);
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private void OnPasswordInput()
    {
        StateHasChanged();
    }

    private void NavigateToLogin()
    {
        Navigation.NavigateTo("/login");
    }

    private void NavigateToForgotPassword()
    {
        Navigation.NavigateTo("/forgot-password");
    }

    private sealed class ResetPasswordModel
    {
        [Required]
        public string? Email { get; set; }

        [Required(ErrorMessage = "Password is required")]
        [StringLength(100, MinimumLength = 8, ErrorMessage = "Password must be at least 8 characters long")]
        [RegularExpression(@"^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,}$",
            ErrorMessage = "Password must contain at least one uppercase letter, one lowercase letter, one number and one special character")]
        public string? Password { get; set; }

        [Required(ErrorMessage = "Please confirm your password")]
        [Compare(nameof(Password), ErrorMessage = "Passwords do not match")]
        public string? ConfirmPassword { get; set; }
    }
}

<style>
    .auth-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem 1rem;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .auth-card {
        background: white;
        border-radius: 1rem;
        box-shadow: 0 20px 60px rgba(0,0,0,0.3);
        padding: 2.5rem;
        width: 100%;
        max-width: 500px;
    }

    .auth-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .auth-header h2 {
        font-weight: 700;
        color: #333;
        margin-bottom: 0.5rem;
    }

    .auth-header p {
        color: #666;
    }

    .password-input-group {
        position: relative;
        display: flex;
    }

    .password-input-group input {
        padding-right: 3rem;
    }

    .password-toggle {
        position: absolute;
        right: 0;
        top: 0;
        bottom: 0;
        border: none;
        background: transparent;
        padding: 0 1rem;
    }

    .password-toggle:hover {
        background: rgba(0,0,0,0.05);
    }

    .success-message {
        padding: 1rem 0;
    }

    .success-icon {
        animation: scaleIn 0.3s ease-in-out;
    }

    @@keyframes scaleIn {
        from {
            transform: scale(0);
            opacity: 0;
        }
        to {
            transform: scale(1);
            opacity: 1;
        }
    }
</style>
