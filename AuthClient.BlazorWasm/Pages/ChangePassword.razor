@page "/change-password"
@using System.ComponentModel.DataAnnotations
@using Microsoft.AspNetCore.Authorization
@using AuthClient.BlazorWasm.Services
@attribute [Authorize]
@inject IAuthenticationService AuthService
@inject INotificationService NotificationService
@inject NavigationManager Navigation

<PageTitle>Change Password</PageTitle>

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <button class="btn btn-link p-0 mb-3" @onclick="NavigateBack">
                <span class="oi oi-arrow-left me-2"></span>Back to Profile
            </button>
            <h2>Change Password</h2>
            <p>Update your password to keep your account secure</p>
        </div>

        <EditForm Model="@model" OnValidSubmit="@HandleSubmit" class="auth-form">
            <DataAnnotationsValidator />

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger" role="alert">
                    <span class="oi oi-warning me-2"></span>@errorMessage
                </div>
            }

            <div class="form-group mb-3">
                <label for="currentPassword" class="form-label">
                    Current Password <span class="text-danger">*</span>
                </label>
                <div class="password-input-group">
                    <InputText 
                        type="@(showCurrentPassword ? "text" : "password")"
                        class="form-control" 
                        id="currentPassword"
                        @bind-Value="model.CurrentPassword"
                        placeholder="Enter current password" />
                    <button type="button" 
                            class="btn btn-outline-secondary password-toggle"
                            @onclick="() => showCurrentPassword = !showCurrentPassword">
                        <span class="oi @(showCurrentPassword ? "oi-eye" : "oi-lock-locked")"></span>
                    </button>
                </div>
                <ValidationMessage For="@(() => model.CurrentPassword)" />
            </div>

            <div class="form-group mb-3">
                <label for="newPassword" class="form-label">
                    New Password <span class="text-danger">*</span>
                </label>
                <div class="password-input-group">
                    <InputText 
                        type="@(showNewPassword ? "text" : "password")"
                        class="form-control" 
                        id="newPassword"
                        @bind-Value="model.NewPassword"
                        @bind-Value:event="oninput"
                        @onkeyup="OnPasswordInput"
                        placeholder="Enter new password" />
                    <button type="button" 
                            class="btn btn-outline-secondary password-toggle"
                            @onclick="() => showNewPassword = !showNewPassword">
                        <span class="oi @(showNewPassword ? "oi-eye" : "oi-lock-locked")"></span>
                    </button>
                </div>
                <ValidationMessage For="@(() => model.NewPassword)" />
                
                @if (!string.IsNullOrEmpty(model.NewPassword))
                {
                    <PasswordStrengthIndicator Password="@model.NewPassword" />
                }
            </div>

            <div class="form-group mb-3">
                <label for="confirmPassword" class="form-label">
                    Confirm New Password <span class="text-danger">*</span>
                </label>
                <div class="password-input-group">
                    <InputText 
                        type="@(showConfirmPassword ? "text" : "password")"
                        class="form-control" 
                        id="confirmPassword"
                        @bind-Value="model.ConfirmPassword"
                        placeholder="Confirm new password" />
                    <button type="button" 
                            class="btn btn-outline-secondary password-toggle"
                            @onclick="() => showConfirmPassword = !showConfirmPassword">
                        <span class="oi @(showConfirmPassword ? "oi-eye" : "oi-lock-locked")"></span>
                    </button>
                </div>
                <ValidationMessage For="@(() => model.ConfirmPassword)" />
            </div>

            <div class="alert alert-info" role="alert">
                <strong>Password Requirements:</strong>
                <ul class="mb-0 mt-2">
                    <li>At least 8 characters long</li>
                    <li>Contains at least one uppercase letter</li>
                    <li>Contains at least one lowercase letter</li>
                    <li>Contains at least one number</li>
                    <li>Contains at least one special character</li>
                </ul>
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary" disabled="@isChanging">
                    @if (isChanging)
                    {
                        <LoadingSpinner Size="sm" />
                        <span class="ms-2">Changing Password...</span>
                    }
                    else
                    {
                        <span>Change Password</span>
                    }
                </button>
                <button type="button" class="btn btn-outline-secondary" @onclick="NavigateBack" disabled="@isChanging">
                    Cancel
                </button>
            </div>
        </EditForm>
    </div>
</div>

@code {
    private ChangePasswordModel model = new();
    private string? errorMessage;
    private bool isChanging;
    private bool showCurrentPassword;
    private bool showNewPassword;
    private bool showConfirmPassword;

    private async Task HandleSubmit()
    {
        errorMessage = null;
        isChanging = true;

        try
        {
            var request = new ChangePasswordRequest
            {
                CurrentPassword = model.CurrentPassword!,
                NewPassword = model.NewPassword!
            };

            var response = await AuthService.ChangePasswordAsync(request);

            if (response.Success)
            {
                await NotificationService.ShowSuccessAsync("Password changed successfully!");
                await Task.Delay(1500);
                Navigation.NavigateTo("/profile");
            }
            else
            {
                errorMessage = response.Message ?? "Failed to change password. Please check your current password.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = "An error occurred while changing your password. Please try again.";
            await NotificationService.ShowErrorAsync(ex.Message);
        }
        finally
        {
            isChanging = false;
        }
    }

    private void OnPasswordInput()
    {
        StateHasChanged();
    }

    private void NavigateBack()
    {
        Navigation.NavigateTo("/profile");
    }

    private sealed class ChangePasswordModel
    {
        [Required(ErrorMessage = "Current password is required")]
        public string? CurrentPassword { get; set; }

        [Required(ErrorMessage = "New password is required")]
        [StringLength(100, MinimumLength = 8, ErrorMessage = "Password must be at least 8 characters long")]
        [RegularExpression(@"^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,}$",
            ErrorMessage = "Password must contain at least one uppercase letter, one lowercase letter, one number and one special character")]
        public string? NewPassword { get; set; }

        [Required(ErrorMessage = "Please confirm your password")]
        [Compare(nameof(NewPassword), ErrorMessage = "Passwords do not match")]
        public string? ConfirmPassword { get; set; }
    }
}

