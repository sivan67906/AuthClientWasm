@page "/forgot-password"
@using System.ComponentModel.DataAnnotations
@using AuthClient.BlazorWasm.Services
@inject IAuthenticationService AuthService
@inject INotificationService NotificationService
@inject NavigationManager Navigation

<PageTitle>Forgot Password</PageTitle>

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h2>Forgot Password?</h2>
            <p>Enter your email address and we'll send you a link to reset your password</p>
        </div>

        @if (!emailSent)
        {
            <EditForm Model="@model" OnValidSubmit="@HandleSubmit" class="auth-form">
                <DataAnnotationsValidator />

                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-danger" role="alert">
                        <span class="oi oi-warning me-2"></span>@errorMessage
                    </div>
                }

                <div class="form-group mb-3">
                    <label for="email" class="form-label">
                        Email Address <span class="text-danger">*</span>
                    </label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <span class="oi oi-envelope-closed"></span>
                        </span>
                        <InputText 
                            type="email"
                            class="form-control" 
                            id="email"
                            @bind-Value="model.Email"
                            placeholder="Enter your email" />
                    </div>
                    <ValidationMessage For="@(() => model.Email)" />
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary" disabled="@isSubmitting">
                        @if (isSubmitting)
                        {
                            <LoadingSpinner Size="sm" />
                            <span class="ms-2">Sending...</span>
                        }
                        else
                        {
                            <span>Send Reset Link</span>
                        }
                    </button>
                    <button type="button" class="btn btn-link" @onclick="NavigateToLogin" disabled="@isSubmitting">
                        Back to Login
                    </button>
                </div>
            </EditForm>
        }
        else
        {
            <div class="success-message text-center">
                <div class="success-icon mb-3">
                    <span class="oi oi-check" style="font-size: 4rem; color: #28a745;"></span>
                </div>
                <h3 class="mb-3">Check Your Email</h3>
                <p class="text-muted mb-4">
                    We've sent a password reset link to <strong>@model.Email</strong>
                </p>
                <p class="text-muted mb-4">
                    Please check your inbox and click the link to reset your password. 
                    The link will expire in 24 hours.
                </p>
                <div class="d-grid gap-2">
                    <button type="button" class="btn btn-primary" @onclick="NavigateToLogin">
                        Return to Login
                    </button>
                    <button type="button" class="btn btn-link" @onclick="ResendEmail" disabled="@isSubmitting">
                        Didn't receive the email? Resend
                    </button>
                </div>
            </div>
        }
    </div>
</div>

@code {
    private ForgotPasswordModel model = new();
    private string? errorMessage;
    private bool isSubmitting;
    private bool emailSent;

    private async Task HandleSubmit()
    {
        errorMessage = null;
        isSubmitting = true;

        try
        {
            var request = new ForgotPasswordRequest
            {
                Email = model.Email!
            };

            var response = await AuthService.ForgotPasswordAsync(request);

            if (response.Success)
            {
                emailSent = true;
                await NotificationService.ShowSuccessAsync("Password reset link sent successfully!");
            }
            else
            {
                errorMessage = response.Message ?? "Failed to send reset link. Please try again.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = "An error occurred while processing your request. Please try again.";
            await NotificationService.ShowErrorAsync(ex.Message);
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private async Task ResendEmail()
    {
        emailSent = false;
        await HandleSubmit();
    }

    private void NavigateToLogin()
    {
        Navigation.NavigateTo("/login");
    }

    private sealed class ForgotPasswordModel
    {
        [Required(ErrorMessage = "Email is required")]
        [EmailAddress(ErrorMessage = "Invalid email address")]
        public string? Email { get; set; }
    }
}

<style>
    .auth-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem 1rem;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .auth-card {
        background: white;
        border-radius: 1rem;
        box-shadow: 0 20px 60px rgba(0,0,0,0.3);
        padding: 2.5rem;
        width: 100%;
        max-width: 500px;
    }

    .auth-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .auth-header h2 {
        font-weight: 700;
        color: #333;
        margin-bottom: 0.5rem;
    }

    .auth-header p {
        color: #666;
        font-size: 0.95rem;
    }

    .success-message {
        padding: 1rem 0;
    }

    .success-icon {
        animation: scaleIn 0.3s ease-in-out;
    }

    @@keyframes scaleIn {
        from {
            transform: scale(0);
            opacity: 0;
        }
        to {
            transform: scale(1);
            opacity: 1;
        }
    }
</style>
