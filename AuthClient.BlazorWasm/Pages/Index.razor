@code {
    private bool isLoggingOut = false;

    private async Task HandleLogout()
    {
        isLoggingOut = true;
        try
        {
            await AuthService.LogoutAsync();
            Navigation.NavigateTo("/login", true);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Logout error: {ex.Message}");
        }
        finally
        {
            isLoggingOut = false;
        }
    }
}
