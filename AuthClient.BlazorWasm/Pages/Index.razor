@page "/"
@using Microsoft.AspNetCore.Components.Authorization
@using AuthClient.BlazorWasm.Services
@inject AuthenticationStateProvider AuthStateProvider
@inject IAuthenticationService AuthService
@inject NavigationManager Navigation

<PageTitle>Home</PageTitle>

<div class="home-container">
    <div class="hero-section">
        <h1 class="hero-title">Welcome to Auth Microservice</h1>
        <p class="hero-subtitle">Secure, scalable authentication for modern applications</p>
    </div>
    
    <AuthorizeView>
        <Authorized>
            <div class="card welcome-card">
                <div class="card-header">
                    <h4>Welcome Back!</h4>
                </div>
                <div class="card-body">
                    <div class="user-info">
                        <div class="info-item">
                            <span class="info-label">Email:</span>
                            <span class="info-value">@context.User.Identity?.Name</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Roles:</span>
                            <span class="info-value">
                                @string.Join(", ", context.User.Claims
                                    .Where(c => c.Type == "http://schemas.microsoft.com/ws/2008/06/identity/claims/role")
                                    .Select(c => c.Value))
                            </span>
                        </div>
                    </div>
                    <div class="action-buttons">
                        <a href="/profile" class="btn btn-primary">View Profile</a>
                        <button class="btn btn-outline-secondary" @onclick="HandleLogout" disabled="@isLoggingOut">
                            @if (isLoggingOut)
                            {
                                <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                            }
                            Logout
                        </button>
                    </div>
                </div>
            </div>
        </Authorized>
        <NotAuthorized>
            <div class="card welcome-card">
                <div class="card-header">
                    <h4>Get Started</h4>
                </div>
                <div class="card-body">
                    <p class="lead">Please login or register to access the application.</p>
                    <div class="action-buttons">
                        <a href="/login" class="btn btn-primary">Login</a>
                        <a href="/register" class="btn btn-outline-primary">Register</a>
                    </div>
                </div>
            </div>
        </NotAuthorized>
    </AuthorizeView>

    <div class="features-section">
        <h3 class="features-title">Features</h3>
        <div class="features-grid">
            <div class="feature-card">
                <div class="feature-icon">üîê</div>
                <h5>JWT Authentication</h5>
                <p>Secure token-based authentication with automatic refresh</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">üë•</div>
                <h5>Role-Based Access</h5>
                <p>Flexible role and claims-based authorization</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">üîÑ</div>
                <h5>Refresh Tokens</h5>
                <p>Seamless token renewal for uninterrupted sessions</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">üì±</div>
                <h5>Multi-Platform</h5>
                <p>Support for Web, Android, and iOS clients</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">üóÑÔ∏è</div>
                <h5>Dual Database</h5>
                <p>CQRS pattern with SQL Server and PostgreSQL</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">‚ö°</div>
                <h5>Vertical Slice</h5>
                <p>Clean architecture with vertical slice pattern</p>
            </div>
        </div>
    </div>
</div>

